@{
    var ImageModel = new TheStation.ViewModels.ImageSorter();
    var filesToShow = ImageModel.FilesToShow;
    var filesLeft = ImageModel.FilesLeft;
	var gridWidth = 1;
}
<script src="@Url.Content("~/Content/scripts/imageSwapper.js")" type="text/javascript"></script>

    <div class="imageGallery">
	@for (int i = 0, j = filesToShow.Count; i < j; i = i + gridWidth)
	{
		<div class="column">

		@foreach (var image in filesToShow.Skip(i).Take(gridWidth))
		{
			<span>
				<img class="frame" alt="" width="720px" height="619px" src="@Url.Content("~/Content/images/stylists/" + image)" />
			</span>
		}

		</div>
	}
    </div>

    <div class="imageHolder">
	    @foreach (string file in filesLeft)
	    {
		    <div class="notActive">
			    <img class="frame" alt="" width="720px" height="619px" src="@Url.Content("~/Content/images/stylists/" + file)" />
		    </div>
	    }
    </div>